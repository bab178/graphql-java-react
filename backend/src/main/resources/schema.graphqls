schema {
  query: Query
  mutation: Mutation
}

type Query {
  bookById(id: ID): Book
  bookList: [Book!]!
}

type Mutation {
  createBook(name: String, pageCount: Int): Book
  createAuthor(firstName: String, lastName: String): Author
}

type Book {
  id: ID
  name: String
  pageCount: Int
  author: Author
}

type Author {
  id: ID
  firstName: String
  lastName: String
}